{
    "name": "galactik-seekers",
    "private": true,
    "workspaces": [
        "game-engine",
        "front-end",
        "back-end"
    ],
    "scripts": {
        "install:game-engine": "cd game-engine && npm install",
        "install:front-end": "cd front-end && npm install",
        "install:back-end": "cd back-end && npm install",
        "install:protobufjs": "npm install protobufjs",
        "install:all": "concurrently \"npm run install:game-engine\" \"npm run install:front-end\" \"npm run install:back-end\" \"npm run install:protobufjs\"",
        "start:game-engine": "cd game-engine && npm run dev",
        "start:front-end": "cd front-end && npm run dev",
        "start:back-end": "cd back-end && npm start",
        "start:all": "concurrently \"npm run start:game-engine\" \"npm run start:front-end\" \"npm run start:back-end\""
    },
    "dependencies": {
        "concurrently": "^8.2.2",
        "protobufjs": "^7.2.6"
    }
}
